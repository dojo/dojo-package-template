{
	"compilerOptions": {
		"declaration": true,
		"experimentalDecorators": true,
		"module": "umd",
		"moduleResolution": "node",
		"outDir": "_build/",
		"removeComments": false,
		"sourceMap": true,
		"strict": true,
		"target": "es5",
		"lib": [
			"dom",
			"es5",
			"es2015.iterable",
			"es2015.promise",
			"es2015.symbol",
			"es2015.symbol.wellknown"
		],
		"types": [ "intern" ]
	},
	"include": [
		"./src/**/*.ts",
		"./tests/**/*.ts"
	],
	"exclude": [
		"_build",
		"dist",
		"node_modules"
	]
}
